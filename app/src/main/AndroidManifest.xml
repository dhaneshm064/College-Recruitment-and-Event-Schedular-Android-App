<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.faizrehman.campus_recruitment_system">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/c"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.Student.Student_Activity"
            android:windowSoftInputMode="stateAlwaysHidden"
            />
        <activity android:name=".ui.Company.Company_Activity"
            android:windowSoftInputMode="stateAlwaysHidden"
            />
        <activity android:name=".ui.Admin.AdminActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            ></activity>
    </application>

</manifest>